desc "Linkup symlinks to dotfiles"
task :link do
  system "ln -sf ~/dotfiles/src/vimrc ~/.vimrc"
  system "ln -sf ~/dotfiles/src/tmux.conf ~/.tmux.conf"
  system "ln -sf ~/dotfiles/src/vimrc.bundles ~/.vimrc.bundles"
  system "ln -sf ~/dotfiles/src/aliases ~/.aliases"
  system "ln -sf ~/dotfiles/src/bashrc ~/.bashrc"
  system "ln -sf ~/dotfiles/src/bash_profile ~/.bash_profile"
  system "ln -sf ~/dotfiles/src/bash_secrets ~/.bash_secrets"
  system "ln -sf ~/dotfiles/src/eslintrc ~/.eslintrc"
  system "ln -sf ~/dotfiles/src/ctags ~/.ctags"

  system "mkdir -p ~/.config/nvim/"
  system "ln -sf ~/dotfiles/src/init.vim ~/.config/nvim/init.vim"

  system "ln -sf ~/dotfiles/src/gitconfig-work ~/.gitconfig-work"
  system "ln -sf ~/dotfiles/src/gitconfig ~/.gitconfig"
  system "ln -sf ~/dotfiles/src/gitignore ~/.gitignore"
  system "ln -sf ~/dotfiles/src/gitignore ~/.ignore"
end

