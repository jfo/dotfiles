desc "Linkup symlinks to dotfiles"
task :link do
  system "ln -s ~/dotfiles/vimrc ~/.vimrc"
  system "ln -s ~/dotfiles/tmux.conf ~/.tmux.conf"
  system "ln -s ~/dotfiles/vimrc.bundles ~/.vimrc.bundles"
  system "ln -s ~/dotfiles/aliases ~/.aliases"
  system "ln -s ~/dotfiles/bashrc ~/.bashrc"
  system "ln -s ~/dotfiles/bash_profile ~/.bash_profile"
  system "ln -s ~/dotfiles/bash_secrets ~/.bash_secrets"


  system "mkdir -p ~/.config/nvim/"
  system "ln -s ~/dotfiles/init.vim ~/.config/nvim/init.vim"
end

task :unlink do
  system "unlink ~/.vimrc"
  system "unlink ~/.tmux.conf"
  system "unlink ~/.vimrc.bundles"
  system "unlink ~/.aliases"
  system "unlink ~/.bashrc"
  system "unlink ~/.bash_profile"
  system "rm -rf ~/.config/nvim/"
end
