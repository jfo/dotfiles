# general shortcuts

alias serve='python -m SimpleHTTPServer 4321'
alias killswap='rm /var/tmp/*.sw* && rm ./*.sw* && rm ~/tmp/*.sw'
alias c='clear'
alias sand='cd ~/sandbox'

# git shortcuts!
alias gl='git log --oneline'

# meta:
alias aliases='less ~/.aliases'

alias d="echo -e '\033]50;SetProfile=Dark\a'"
alias l="echo -e '\033]50;SetProfile=Light\a'"
alias j="echo -e '\033]50;SetProfile=Jung\a'"

alias t="tmux"
alias tl="tmux list-sessions"
alias ta="tmux attach"
alias td="tmux detach"

alias scalding="cd ~/development/BigData/lib/jobs/scalding/src/main/com/etsy/scalding/jobs/"
alias ew="cd ~/development/Etsyweb"
alias apic="~/development/Etsyweb/bin/api/compile"

function gitopen {
    vim $(git diff HEAD^ --name-only)
}
alias gopen=gitopen

alias vimo="vim -S ~/.vim/sessions/last.vim"

slateplus() {
    curl $1 | sed  "s/roadblocked\": true/roadblocked\": false/g" > /tmp/slate.html && open /tmp/slate.html
}

alias slateplus=slateplus

alias nyancat='pygmentize -g'
